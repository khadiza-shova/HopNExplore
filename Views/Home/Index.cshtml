@* @model IEnumerable<HopNExplore.Models.TourPackage> *@
<style>
    nav {
        position: absolute;
        /* sits over the banner */
        top: 0;
        left: 0;
        width: 100%;
        z-index: 10;
        /* on top of overlay */
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: transparent;
    }

    .banner {
        position: relative;
        width: 100%;
        height: 100vh;
        /* adjust height as needed */
        background: url('images/HomePageImages/slider1.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .banner::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        /* black with 50% opacity */
        z-index: 1;
        pointer-events: none;
    }

    nav ul li a {
        color: white !important;
        transition: color 0.3s ease;
    }

    /* Banner content */
    .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        /* Center vertically & horizontally */
        z-index: 2;
        color: white;
        text-align: center;
    }
</style>

<div class="">
    <section class="max-w-6xl mx-auto px-6 py-16 text-center">
        <h2 class="text-3xl font-bold mb-4 text-white">Why Choose HopNExplore?</h2>
        <p class="text-gray-400 mb-12">
            Experience the world with experts who care about your journey.
        </p>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            <!-- Card 1 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">🏅</div>
                <h3 class="text-lg text-white font-semibold mb-2">Expert Guides</h3>
                <p class="text-gray-400 text-sm">
                    Our experienced guides ensure a safe, insightful, and memorable journey every time.
                </p>
            </div>

            <!-- Card 2 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">📖</div>
                <h3 class="text-lg font-semibold mb-2 text-white">Customizable Itineraries</h3>
                <p class="text-gray-400 text-sm">
                    Tailor your adventure to your unique preferences with our flexible tour options.
                </p>
            </div>

            <!-- Card 3 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">🌍</div>
                <h3 class="text-lg font-semibold mb-2 text-white">Sustainable Travel</h3>
                <p class="text-gray-400 text-sm">
                    We are committed to eco-friendly practices, preserving the beauty of our destinations.
                </p>
            </div>

            <!-- Card 4 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">📞</div>
                <h3 class="text-lg font-semibold mb-2 text-white">24/7 Support</h3>
                <p class="text-gray-400 text-sm">
                    Our dedicated support team is available around the clock to assist you.
                </p>
            </div>

            <!-- Card 5 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">🌏</div>
                <h3 class="text-lg font-semibold mb-2 text-white">Diverse Destinations</h3>
                <p class="text-gray-400 text-sm">
                    Explore a world of possibilities from serene beaches to bustling metropolises.
                </p>
            </div>

            <!-- Card 6 -->
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition">
                <div class="text-4xl text-blue-500 mb-4">✨</div>
                <h3 class="text-lg font-semibold mb-2 text-white">Unforgettable Experiences</h3>
                <p class="text-gray-400 text-sm">
                    We craft unique moments that turn trips into lifelong memories.
                </p>
            </div>
        </div>
    </section>


    @* Tour Packages  *@

    <div class="max-w-7xl mx-auto px-4 py-12">
        <h1 class="text-2xl font-bold text-center mb-8 text-white">Latest Tour Packages</h1>

        <!-- Filter & Sort Buttons -->
        <div class="flex justify-center gap-4 mb-10">
            <button class="px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 flex items-center gap-2">
                <span>Filter</span>
            </button>
            <button class="px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 flex items-center gap-2">
                <span>Sort By</span>
            </button>
        </div>

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

            @foreach (var item in Model)
            {
                <!-- Card -->
                <div class="bg-gray-900 rounded-xl overflow-hidden shadow-lg">
                    <img src="@Url.Action("GetThumbnail", "TourPackage", new { id = item.Id })" alt=""
                        class="w-full h-48 object-cover">
                    <div class="p-5">
                        <h2 class="text-lg font-semibold text-white">@item.TourName</h2>
                        <p class="text-sm text-gray-400 mb-3">@item.Days Days / @item.Nights Nights</p>
                        <p class="text-sm text-gray-300 mb-4">@item.DetailedDescription</p>
                        <div class="flex justify-between items-center">
                            <span class="text-red-500 font-bold text-lg">@item.Price BDT</span>

                            <a asp-controller="TourPackage" asp-action="Details" asp-route-id="@item.Id">

                                <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-3 rounded-lg text-sm">View
                                    Details</button>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="flex justify-end mt-4">

            <a asp-controller="TourPackage" asp-action="Index">

                <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-3 rounded-lg text-sm  ">View
                    All Package</button>

            </a>
        </div>


    </div>




    <div class="max-w-7xl mx-auto px-4 py-16">


        <!-- Header Section -->
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
                We'd Love to Hear From You
            </h1>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">
                Whether you have a question about our tours, need assistance with a booking,
                or just want to say hello, we're here to help.
            </p>
        </div>

        <!-- Contact Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
            <!-- Get in Touch Section -->
            <div class="space-y-8">
                <h2 class="text-2xl font-bold text-gray-400 mb-6">Get in Touch</h2>

                <!-- Contact Info Items -->
                <div class="space-y-6">
                    <!-- Address -->
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-wanderlust-blue" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                                    </path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-400 mb-1">Address</h3>
                            <p class="text-gray-400">
                                123 Adventure Avenue, Suite 400, Explorer City,<br>
                                Wanderlust State 98765
                            </p>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-wanderlust-blue" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-400 mb-1">Phone</h3>
                            <a href="tel:+15551234567"
                                class="text-gray-400 hover:text-wanderlust-blue transition-colors">
                                +1 (555) 123-4567
                            </a>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-wanderlust-blue" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-400 mb-1">Email</h3>
                            <a href="mailto:info@wanderlusttours.com"
                                class="text-gray-400 hover:text-wanderlust-blue transition-colors">
                                info@wanderlusttours.com
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="bg-blue-50 rounded-xl p-6 mt-8">
                    <h3 class="font-semibold text-black mb-2">Office Hours</h3>
                    <p class="text-gray-700 text-sm">
                        Monday - Friday: 9:00 AM - 6:00 PM<br>
                        Saturday: 10:00 AM - 4:00 PM<br>
                        Sunday: Closed
                    </p>
                </div>
            </div>

            <!-- Send Us a Message Section -->
            <div class="bg-white rounded-2xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Send Us a Message</h2>

                <form class="space-y-6" id="contactForm">
                    <!-- Your Name -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                            Your Name
                        </label>
                        <input type="text" id="name" name="name" placeholder="John Doe"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wanderlust-blue focus:border-wanderlust-blue outline-none transition-colors"
                            required>
                    </div>

                    <!-- Your Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Your Email
                        </label>
                        <input type="email" id="email" name="email" placeholder="john.doe@example.com"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wanderlust-blue focus:border-wanderlust-blue outline-none transition-colors"
                            required>
                    </div>

                    <!-- Subject -->
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                            Subject
                        </label>
                        <input type="text" id="subject" name="subject" placeholder="Regarding a tour package"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wanderlust-blue focus:border-wanderlust-blue outline-none transition-colors"
                            required>
                    </div>

                    <!-- Your Message -->
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                            Your Message
                        </label>
                        <textarea id="message" name="message" rows="5" placeholder="Tell us how we can help you..."
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wanderlust-blue focus:border-wanderlust-blue outline-none transition-colors resize-vertical"
                            required></textarea>
                    </div>

                    <!-- Send Message Button -->
                    <button type="submit"
                        class="w-full bg-red-500 hover:bg-red-600 text-white px-4 py-3 rounded-lg text-sm">
                        Send Message
                    </button>
                </form>
            </div>
        </div>

        <!-- Success Message (Hidden by default) -->
        <div id="successMessage"
            class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white rounded-lg p-8 max-w-md mx-4">
                <div class="text-center">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Message Sent!</h3>
                    <p class="text-gray-600 mb-4">Thank you for reaching out. We'll get back to you soon!</p>
                    <button onclick="closeSuccessMessage()"
                        class="bg-wanderlust-blue text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>
