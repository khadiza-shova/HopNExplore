<style>
    nav {
        position: absolute;
        /* sits over the banner */
        top: 0;
        left: 0;
        width: 100%;
        z-index: 10;
        /* on top of overlay */
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: transparent;
    }

    .banner {
        position: relative;
        width: 100%;
        height: 100vh;
        /* adjust height as needed */
        background: url('images/HomePageImages/slider1.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .banner::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        /* black with 50% opacity */
        z-index: 1;
        pointer-events: none;
    }

    nav ul li a {
        color: white !important;
        transition: color 0.3s ease;
    }

    /* Banner content */
    .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        /* Center vertically & horizontally */
        z-index: 2;
        color: white;
        text-align: center;
    }
</style>

